<div class='row py-4 px-5'>
	<div class='col-12 col-sm-3'>
		<div class="card">
		  <div class="card-header">
		    <%= image_tag "photo.jpg", height: 150 %>
		  </div>
		  <div class="card-body">
		    <h5 class="card-title"><%= @doctor.first_name %> <%= @doctor.last_name %></h5>
		    <p class="card-text">Specialisation: <%= @doctor.specialisation %></p>
		  </div>
		</div>
		<br>
		<%= link_to "Edit", edit_doctor_path, class:"btn btn-secondary" %>
		<%= link_to "Back", doctors_path, class:"btn btn-secondary" %>

	</div>
</div>